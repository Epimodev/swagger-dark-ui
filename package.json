{
  "name": "preact-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Frederic Godin",
  "license": "MIT",
  "keywords": [
    "preact",
    "webpack",
    "svg-sprite",
    "css modules",
    "typescript",
    "tslint"
  ],
  "scripts": {
    "dev": "node webpack/development.js",
    "build": "yarn lint && node webpack/build.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts?(x)'",
    "check-format": "prettier --list-different 'src/**/*.ts?(x)'"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "awesome-typescript-loader": "^5.0.0",
    "css-loader": "^0.28.11",
    "dotenv": "^5.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.2",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "preact-compat": "^3.18.0",
    "prettier": "^1.12.1",
    "sass-loader": "^7.0.1",
    "shelljs": "^0.8.1",
    "style-loader": "^0.21.0",
    "svg-sprite-html-webpack": "^2.1.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3",
    "webpack": "^4.7.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "webpackbar": "^2.6.1"
  },
  "dependencies": {
    "preact": "^8.2.9",
    "preact-redux": "^2.0.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn check-format"
    }
  }
}
