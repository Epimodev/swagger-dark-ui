{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
    ],
    "typeRoots" : [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./src/**/test.ts",
    "node_modules"
  ]
}
